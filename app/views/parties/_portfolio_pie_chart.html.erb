                formatter: function() {
                    return '<b>' + this.point.name + '</b>: ' + this.y + ' %';
                }
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: false
                    },
                    showInLegend: true
                }
            },
            series: []
        };

        var series =
            {
                type: 'pie',
                data: []
            }
        ;
        $.each(data, function(label, value) {
                series.data.push([label,value]);
        });
        options.series.push(series);
        // Create the chart
        var chart = new Highcharts.Chart(options);
    })
